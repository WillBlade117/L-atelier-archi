---
import Layout from '../../layouts/Layout.astro';
import ProjectCard from '../../components/ProjectCard.astro';
import { getCollection } from 'astro:content';

const allProjects = await getCollection('projects');
const sortedProjects = allProjects.sort((a, b) => b.data.completionDate.valueOf() - a.data.completionDate.valueOf());
---

<Layout title="Nos Réalisations">
  <main class="pt-32 pb-24 bg-primary-900 min-h-screen">
    <div class="max-w-screen-2xl mx-auto px-6 md:px-12">
      
      <div class="mb-16">
        <h1 class="text-5xl md:text-6xl text-white font-serif mb-6">Notre Portfolio</h1>
        <p class="text-xl text-gray-300 max-w-2xl font-light">
          Découvrez l'ensemble de nos projets de rénovation et d'architecture d'intérieur.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedProjects.map((project) => (
           <ProjectCard project={project} />
        ))}
      </div>

    </div>
  </main>
</Layout>