---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';

interface Props {
  project: CollectionEntry<'projects'>;
}

const { project } = Astro.props;
---

<a href={`/projets/${project.slug}`} class="group relative block overflow-hidden bg-primary-800 h-[400px]">
  
  <div class="absolute inset-0 transition-transform duration-700 group-hover:scale-110">
    <Image 
      src={project.data.coverImage} 
      alt={project.data.title}
      width={800}
      height={600}
      class="h-full w-full object-cover opacity-90 transition-opacity duration-500 group-hover:opacity-100"
    />
    <div class="absolute inset-0 bg-primary-900/40 group-hover:bg-primary-900/20 transition-colors duration-500"></div>
  </div>

  <div class="absolute inset-0 flex flex-col justify-end p-8">
    
    <span class="text-accent-gold text-xs font-bold tracking-widest uppercase mb-2 translate-y-4 opacity-0 transition-all duration-500 group-hover:translate-y-0 group-hover:opacity-100">
      {project.data.category} â€” {project.data.location}
    </span>

    <h3 class="text-3xl font-serif text-white mb-1 transform transition-transform duration-500 group-hover:-translate-y-2">
      {project.data.title}
    </h3>

    <p class="text-gray-300 font-sans text-sm line-clamp-2 opacity-0 translate-y-4 transition-all duration-500 delay-100 group-hover:translate-y-0 group-hover:opacity-100">
      {project.data.description}
    </p>

    <div class="w-12 h-0.5 bg-accent-gold mt-4 transition-all duration-500 group-hover:w-24"></div>
  </div>
</a>